{
  "plugins": [
    "react",
    "react-native"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    }
  },
  "rules": {
    "no-mixed-spaces-and-tabs": [
      2,
      false
    ],
    "no-this-before-super": 2,
    "no-var": 2,
    "indent": [
      2,
      4
    ],
    "radix": 2,
    "semi": [
      2,
      "always"
    ],
    "strict": [
      2,
      "global"
    ],
    "valid-jsdoc": 0,
    "no-empty-function": 0,
    "no-console": 0,
    "default-case": 2,
    "no-eq-null": 1,
    "no-eval": 2,
    "no-redeclare": 2,
    "no-use-before-define": 0,
    "react/prop-types": 0,
    "no-invalid-this": 0,
    "class-methods-use-this": 0,
    "import/no-nodejs-modules": 0,
    "import/no-commonjs": 0,
    "import/no-namespace": 0,
    "object-shorthand": 0,
    "no-new": 0,
    "no-extend-native": 1,
    "no-fallthrough": 1,
    "no-loop-func": "warn",
    "array-callback-return": "warn"
  },
  "globals": {
    "__DEV__": true,
    "console": true,
    "__dirname": true,
    "setTimeout": true,
    "process": true,
    "navigator": true
  },
  "extends": [
    "esnext",
    "plugin:react/recommended"
  ]
}