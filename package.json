{
  "name": "@incpad/incpad",
  "scripts": {
    "commit": "git-cz",
    "new:package": "bash ./scripts/CreatePackage.sh",
    "publish": "bash ./scripts/publish_private.sh",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "test": "jest",
    "release": "standard-version"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "babel-eslint": "^10.0.1",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^5.9.0",
    "eslint-config-esnext": "^4.0.0",
    "eslint-plugin-react": "^7.11.1",
    "eslint-plugin-react-native": "^3.5.0",
    "husky": "^1.2.0",
    "jest": "^23.6.0",
    "lerna": "^3.4.3",
    "lint-staged": "^8.1.0",
    "standard-version": "^4.4.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --config ./.prettierrc --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "version": "1.2.1",
  "main": "index.js",
  "author": "aj0k3r <x3359449@qq.com>",
  "license": "MIT",
  "jest": {
    "collectCoverageFrom": [
      "packages/*/src/**/*.mjs",
      "packages/*/src/**/*.js"
    ],
    "testRegex": "./(packages)/[^/]+/test/.+\\.m?js$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/test/fixtures/",
      "/test/debug-fixtures/",
      "/test/tmp/",
      "/test/__data__/",
      "/test/helpers/",
      "<rootDir>/test/warning\\.js",
      "<rootDir>/build/",
      "_browser\\.js"
    ],
    "testEnvironment": "node",
    "transformIgnorePatterns": [
      "/node_modules/",
      "/test/(fixtures|tmp|__data__)/",
      "<rootDir>/(packages)/[^/]+/lib/"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/(fixtures|tmp|__data__)/"
    ],
    "modulePathIgnorePatterns": [
      "/test/fixtures/",
      "/test/tmp/",
      "/test/__data__/",
      "<rootDir>/build/"
    ]
  },
  "changelog": {
    "repo": "aj0k3r/Incpad",
    "labels": {
      "enhancement": ":rocket: Enhancement",
      "bug": ":bug: Bug Fix",
      "doc": "Refine Doc",
      "feat": "New Feature",
      "build": "Build configure change"
    },
    "cacheDir": ".changelog"
  },
  "repository": "git@gitee.com:brokenMoon/Incpad.git"
}
